# Sesamum Dashboard - Development Environment Configuration

# API Configuration
# Base URL for all API requests
# In development, this points to the local Django backend
# MSW will intercept requests to this URL when enabled
VITE_API_BASE_URL=http://localhost:8000

# MSW (Mock Service Worker) Configuration
# Set to "true" to enable MSW and use mock data
# Set to "false" to connect to the real backend API
VITE_ENABLE_MSW=true

# MSW Delay (milliseconds)
# Simulates network latency for realistic testing
# Default: 800ms
VITE_MSW_DELAY=800
